# Example terraform.tfvars file
# Copy this file to terraform.tfvars and modify as needed

aws_region    = "us-east-1"
project_name  = "superaws"
environment   = "dev"

# S3 Configuration
create_s3_bucket = true
s3_bucket_name   = "my-data-bucket"

# EC2 Configuration (set to false for minimal setup)
create_ec2_instance = false
instance_type       = "t3.micro"

# Additional tags to apply to all resources
additional_tags = {
  Owner      = "YourName"
  CostCenter = "Development"
}

# Uncomment and set if you want to create EC2 instances
# Remember to replace with your actual public key
# ec2_public_key = "ssh-rsa AAAAB3NzaC1yc2EAAAADAQABAAABAQC... your-email@example.com"